<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/track_list_layout"
        android:orientation="vertical"
        android:layout_marginEnd="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/title_field"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingTop="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="15sp"
            android:textColor="#ffff"
            android:textStyle="bold"
            android:text="what_lovers_do_feat_sza"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/artist_field"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textSize="12sp"
                android:textColor="#ffff"
                android:textStyle="bold"
                android:text="maroon_5"/>

            <TextView
                android:id="@+id/album_field"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:textSize="12sp"
                android:textColor="#ffff"
                android:textStyle="bold"
                android:text="red_pill_blues_deluxe"/>

        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/more_horiz"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/ic_more_horiz_black_24dp"
        android:contentDescription="TODO" />
</RelativeLayout>